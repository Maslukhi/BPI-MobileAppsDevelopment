<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="753dp"
        android:background="@drawable/gradient1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:context=".ui.fragments.ProfileFragment">

        <ImageView
            android:layout_width="418dp"
            android:layout_height="616dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="384dp"
            android:src="@drawable/neonleaf2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="135dp"
            android:layout_height="132dp"
            android:layout_gravity="center"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="180dp"
            android:foregroundGravity="center_horizontal"
            android:paddingTop="10dp"
            android:src="@drawable/foto_profile"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvGithubName"
            android:layout_width="129dp"
            android:layout_height="18dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="104dp"
            android:gravity="center_horizontal"
            android:text="@string/github_username"
            android:textColor="@color/darkgrey"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvLevina"
            android:layout_width="168dp"
            android:layout_height="41dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:text="@string/levina_shaharani_prabowo"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvnamalengkap"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvnamalengkap"
            android:layout_width="129dp"
            android:layout_height="18dp"
            android:layout_marginStart="136dp"
            android:layout_marginTop="20dp"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/nama_lengkap"
            android:textColor="@color/darkgrey"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvlevinasp"
            android:layout_width="114dp"
            android:layout_height="23dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:text="@string/levinasp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGithubName"
            tools:ignore="MissingConstraints" />


        <ImageView
            android:layout_width="418dp"
            android:layout_height="616dp"
            android:layout_marginTop="232dp"
            android:src="@drawable/neonleaf"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-23dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>